#include <bits/stdc++.h>
using namespace std;

int main() {
    int X;
    cin >> X;

    // Activity times
    int activities[] = {1, 2, 4};
    int count = 0;

    for (int i = 0; i < 3; i++) {
        if (X >= activities[i]) {
            X -= activities[i];
            count++;
        }
    }

    cout << count << endl;

    return 0;
}
